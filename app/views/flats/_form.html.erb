
<%= simple_form_for(@flat) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address,
                wrapper_html: {
                  data: {
                    controller: 'address-autocomplete',
                    address_autocomplete_api_key_value: ENV.fetch('MAPBOX_API_KEY')
                  }
                },
                input_html: { class: 'd-none', data: { address_autocomplete_target: 'input' }} %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
